<Window x:Class="Problem3.EditNewsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EditNewsWindow" Height="300" Width="300">
    <Grid>
        <Label Content="Edit News" HorizontalAlignment="Left" Background="#FFFFF3CF" VerticalAlignment="Top" RenderTransformOrigin="-1.002,0.491" Width="292" Height="70" FontSize="48" HorizontalContentAlignment="Center"/>

        <Button x:Name="SaveChanges" BorderBrush="#FFEE8336" Background="#FFF" BorderThickness="3" FontSize="22" FontWeight="bold" Content="Save" HorizontalAlignment="Left" Margin="28,222,0,0" VerticalAlignment="Top" Width="103" Height="36" Click="SaveChanges_Click"/>
        <Button x:Name="CancelChanges" BorderBrush="#FFEE8336" Background="#FFF" BorderThickness="3" FontSize="22" FontWeight="bold" Content="Cancel" HorizontalAlignment="Left" Margin="164,222,0,0" VerticalAlignment="Top" Width="103" Height="36" Click="CancelChanges_Click"/>
        <TextBox x:Name="NewsTextBox" BorderBrush="#FFEE8336" BorderThickness="3" FontSize="24" HorizontalAlignment="Left" Height="105" Margin="28,95,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="239"/>
    </Grid>
</Window>
